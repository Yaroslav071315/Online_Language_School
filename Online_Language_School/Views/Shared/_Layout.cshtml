<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Online Language School</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --bg-color: #ffffff;
            --text-color: #222222;
            --accent-color: #4e73df;
            --secondary-color: #1cc88a;
        }
        body.dark {
            --bg-color: #1e1e1e;
            --text-color: #f1f1f1;
            --accent-color: #90caf9;
            --secondary-color: #66bb6a;
        }
        body {
            background: var(--bg-color);
            color: var(--text-color);
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .theme-toggle {
            margin-left: auto;
            padding: 6px 12px;
            background: var(--accent-color);
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Header / Navbar -->
    <header class="d-flex align-items-center p-3 bg-light border-bottom">
        <a class="navbar-brand fw-bold text-primary" href="/">🎓 Language School</a>
        <nav class="ms-4">
            <a class="me-3"  href="/">About</a>
            <a class="me-3"  href="/">Advantages</a>
            <a class="me-3"  href="/">Contacts</a>
            <a class="me-3" href="/News">News</a>
            <a class="me-3" href="/Account/Login">Log in / Sign up</a>
        </nav>
        <!-- 🌙 Toggle Theme button доступний всюди -->
        <button class="theme-toggle" onclick="toggleTheme()">🌙 Toggle Theme</button>
    </header>

    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 p-3 border-top">
        <p>📞 Contact us: info@languageschool.com | +380 67 123 4567</p>
        <p>🌐 Follow us:
            <a href="#">Facebook</a> |
            <a href="#">Instagram</a> |
            <a href="#">LinkedIn</a>
        </p>
    </footer>

    <script>
        function toggleTheme() {
            document.body.classList.toggle("dark");
            // збереження вибору у localStorage
            if (document.body.classList.contains("dark")) {
                localStorage.setItem("theme", "dark");
            } else {
                localStorage.setItem("theme", "light");
            }
        }

        // при завантаженні сторінки застосовуємо збережену тему
        window.onload = function () {
            if (localStorage.getItem("theme") === "dark") {
                document.body.classList.add("dark");
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>