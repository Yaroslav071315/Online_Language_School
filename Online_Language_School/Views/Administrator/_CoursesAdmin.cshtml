@model IEnumerable<Course>
@using Online_Language_School.Models

<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Courses" class="row g-2" courses-search>
            <div class="col-md-3">
                <input name="Title" class="form-control" placeholder="Title" />
            </div>

            <div class="col-md-2">
                <select name="Status" class="form-select">
                    <option value="">All statuses</option>
                    <option value="Draft">Draft</option>
                    <option value="Submitted">Submitted</option>
                    <option value="Approved">Approved</option>
                    <option value="Active">Active</option>
                </select>
            </div>

            <div class="col-md-2">
                <input name="MinPrice" type="number" class="form-control" placeholder="Min price" />
            </div>

            <div class="col-md-2">
                <input name="MaxPrice" type="number" class="form-control" placeholder="Max price" />
            </div>

            <div class="col-md-2">
                <select name="OnlySubmitted" class="form-select">
                    <option value="false">All</option>
                    <option value="true">Only submitted</option>
                </select>
            </div>

            <div class="col-md-1">
                <button class="btn btn-primary w-100">Filter</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Teacher</th>
            <th>Price</th>
            <th>Language</th>
            <th>Level</th>
            <th>Status</th>
            <th width="240">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@($"{course.Teacher?.FirstName} {course.Teacher?.LastName}")</td>
                <td>@course.Price.ToString("F2")</td>
                <td>@course.Language</td>
                <td>@course.Level</td>
                <td>
                    <span class="badge bg-secondary">@course.Status</span>
                </td>
                <td>
                    <button class="btn btn-sm btn-info"
                            data-bs-toggle="modal"
                            data-bs-target="#viewCourseModal-@course.Id">
                        View
                    </button>

                    @if (course.Status == CourseStatus.Submitted)
                    {
                        <form asp-action="ApproveCourse" method="post" class="d-inline" form-courses>
                            <input type="hidden" name="id" value="@course.Id" />
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>

                        <button class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#rejectCourseModal-@course.Id">
                            Reject
                        </button>
                    }

                    @if (course.Status == CourseStatus.Active ||
                      course.Status == CourseStatus.Enrollment ||
                      course.Status == CourseStatus.Approved)
                    {
                        <form asp-action="FreezeCourse" method="post" class="d-inline" form-courses>
                            <input type="hidden" name="id" value="@course.Id" />
                            <button class="btn btn-sm btn-warning">Freeze</button>
                        </form>
                    }

                    @if (course.Status == CourseStatus.Draft)
                    {
                        <form asp-action="StartCourse" method="post" class="d-inline" form-courses>
                            <input type="hidden" name="id" value="@course.Id" />
                            <button class="btn btn-sm btn-primary">Start</button>
                        </form>
                    }
                </td>
            </tr>
            }
    </tbody>
</table>

@foreach (var course in Model)
{
    @await Html.PartialAsync("_ViewCourseAdmin", course)

    <div class="modal fade" id="rejectCourseModal-@course.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="RejectCourse" method="post" form-courses>
                    <div class="modal-header">
                        <h5 class="modal-title">Reject course</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" name="CourseId" value="@course.Id" />
                        <textarea name="Reason" class="form-control"
                            rows="4"></textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-danger">Reject</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
