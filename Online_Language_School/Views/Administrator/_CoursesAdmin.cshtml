@model IEnumerable<Online_Language_School.Models.Course>

<h4 class="mb-3">➕ Create New Course</h4>

<form asp-action="CreateCourse" asp-controller="Administrator" method="post" class="mb-5 border p-3 rounded bg-light">
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="title" class="form-control" placeholder="Title" required /></div>
        <div class="col-6"><input name="language" class="form-control" placeholder="Language" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="level" class="form-control" placeholder="Level" required /></div>
        <div class="col-6"><input name="format" class="form-control" placeholder="Format" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="price" type="number" step="0.01" class="form-control" placeholder="Price" required /></div>
        <div class="col-6"><input name="maxStudents" type="number" class="form-control" placeholder="Max Students" /></div>
    </div>
    <div class="mb-2">
        <input name="imageUrl" class="form-control" placeholder="Image URL" />
    </div>
    <div class="mb-2">
        <textarea name="description" class="form-control" placeholder="Description" required></textarea>
    </div>
    <div class="mb-2">
        <input name="administratorId" class="form-control" placeholder="Administrator Id" required />
    </div>
    <div class="mb-2">
        <input name="teacherId" class="form-control" placeholder="Teacher Id" required />
    </div>
    <button type="submit" class="btn btn-primary">✅ Create Course</button>
</form>

<h4 class="mb-3">✏️ Edit Existing Course</h4>

<form asp-action="EditCourse" asp-controller="Administrator" method="post" class="mb-5 border p-3 rounded bg-light">
    <div class="mb-2">
        <input name="id" type="number" class="form-control" placeholder="Course Id to Edit" required />
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="title" class="form-control" placeholder="Title" required /></div>
        <div class="col-6"><input name="language" class="form-control" placeholder="Language" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="level" class="form-control" placeholder="Level" required /></div>
        <div class="col-6"><input name="format" class="form-control" placeholder="Format" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="price" type="number" step="0.01" class="form-control" placeholder="Price" required /></div>
        <div class="col-6"><input name="maxStudents" type="number" class="form-control" placeholder="Max Students" /></div>
    </div>
    <div class="mb-2">
        <input name="imageUrl" class="form-control" placeholder="Image URL" />
    </div>
    <div class="mb-2">
        <textarea name="description" class="form-control" placeholder="Description" required></textarea>
    </div>
    <div class="mb-2">
        <input name="administratorId" class="form-control" placeholder="Administrator Id" required />
    </div>
    <div class="mb-2">
        <input name="teacherId" class="form-control" placeholder="Teacher Id" required />
    </div>
    <button type="submit" class="btn btn-success">💾 Save Changes</button>
</form>

<h4 class="mb-3">📋 All Courses</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Language</th>
            <th>Level</th>
            <th>Format</th>
            <th>Price</th>
            <th>Max Students</th>
            <th>Image</th>
            <th>Active</th>
            <th>Created</th>
            <th>AdministratorId</th>
            <th>TeacherId</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Language</td>
                    <td>@course.Level</td>
                    <td>@course.Format</td>
                    <td>@course.Price</td>
                    <td>@course.MaxStudents</td>
                    <td>
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                                <img src="@course.ImageUrl" alt="Course image" style="max-height:40px;" />
                    }
                    </td>
                    <td>@(course.IsActive ? "Yes" : "No")</td>
                    <td>@course.CreatedAt.ToShortDateString()</td>
                    <td>@course.AdministratorId</td>
                    <td>@course.TeacherId</td>
                    <td>
                        <form asp-action="DeleteCourse" asp-controller="Administrator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@course.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">🗑 Delete</button>
                        </form>

                        <form asp-action="ToggleCourseActive" asp-controller="Administrator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@course.Id" />
                            <button type="submit" class="btn btn-sm btn-secondary">
                            @(course.IsActive ? "⏸ Freeze" : "▶️ Start")
                            </button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>