@model IEnumerable<Online_Language_School.Models.BlogPost>

<h4 class="mb-3">📰 News Management</h4>

<!-- Accordion для Create/Edit -->
<div class="accordion mb-4" id="newsAccordion">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingCreateNews">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCreateNews">
                ➕ Create News
            </button>
        </h2>
        <div id="collapseCreateNews" class="accordion-collapse collapse show" data-bs-parent="#newsAccordion">
            <div class="accordion-body">
                <form asp-action="CreateNews" asp-controller="Administrator" method="post" class="border p-3 rounded bg-light">
                    <div class="mb-2"><input name="title" class="form-control" placeholder="Title" required /></div>
                    <div class="mb-2"><textarea name="content" class="form-control" placeholder="Content" required></textarea></div>
                    <div class="mb-2"><input name="imageUrl" class="form-control" placeholder="Image URL" /></div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="publishedAt" type="datetime-local" class="form-control" required /></div>
                        <div class="col-6">
                            <select name="isPublished" class="form-control">
                                <option value="true">Published</option>
                                <option value="false">Draft</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-2"><input name="adminId" class="form-control" placeholder="Admin Id" required /></div>
                    <button type="submit" class="btn btn-primary">✅ Create News</button>
                </form>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingEditNews">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEditNews">
                ✏️ Edit News
            </button>
        </h2>
        <div id="collapseEditNews" class="accordion-collapse collapse" data-bs-parent="#newsAccordion">
            <div class="accordion-body">
                <form asp-action="EditNews" asp-controller="Administrator" method="post" class="border p-3 rounded bg-light">
                    <div class="mb-2"><input name="id" type="number" class="form-control" placeholder="News Id to Edit" required /></div>
                    <div class="mb-2"><input name="title" class="form-control" placeholder="Title" required /></div>
                    <div class="mb-2"><textarea name="content" class="form-control" placeholder="Content" required></textarea></div>
                    <div class="mb-2"><input name="imageUrl" class="form-control" placeholder="Image URL" /></div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="publishedAt" type="datetime-local" class="form-control" required /></div>
                        <div class="col-6">
                            <select name="isPublished" class="form-control">
                                <option value="true">Published</option>
                                <option value="false">Draft</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-2"><input name="adminId" class="form-control" placeholder="Admin Id" required /></div>
                    <button type="submit" class="btn btn-success">💾 Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">📋 All News</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Published At</th>
            <th>Is Published</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.PublishedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(post.IsPublished ? "Yes" : "No")</td>
                    <td>
                        <!-- View button -->
                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewNews-@post.Id">
                            👁 View
                        </button>

                        <form asp-action="DeleteNews" asp-controller="Administrator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@post.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">🗑 Delete</button>
                        </form>
                    </td>
                </tr>

                <!-- Modal with Bootstrap Card -->
                <div class="modal fade" id="viewNews-@post.Id" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@post.Title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="card">
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                            <img src="@post.ImageUrl" class="card-img-top" alt="News image">
                                }
                                    <div class="card-body">
                                        <h5 class="card-title">@post.Title</h5>
                                        <p class="card-text">@post.Content</p>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">Published At: @post.PublishedAt.ToString("yyyy-MM-dd HH:mm")</li>
                                            <li class="list-group-item">Is Published: @(post.IsPublished ? "Yes" : "No")</li>
                                            <li class="list-group-item">Admin Id: @post.AdminId</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </tbody>
</table>