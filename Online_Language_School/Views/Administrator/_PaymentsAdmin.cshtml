@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Online_Language_School.Models.Payment>

<h4 class="mb-3">💳 @Localizer["PaymentsManagement"]</h4>

<!-- Accordion Create/Edit -->
<div class="accordion mb-4" id="paymentAccordion">

    <!-- CREATE -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingCreatePayment">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCreatePayment">
                ➕ @Localizer["CreatePayment"]
            </button>
        </h2>

        <div id="collapseCreatePayment" class="accordion-collapse collapse show" data-bs-parent="#paymentAccordion">
            <div class="accordion-body">

                <form asp-action="CreatePayment" asp-controller="Administrator" method="post" class="border p-3 rounded bg-light">

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="userId" class="form-control" placeholder="@Localizer["UserId"]" required /></div>
                        <div class="col-6"><input name="courseId" class="form-control" placeholder="@Localizer["CourseId"]" required /></div>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="amount" type="number" step="0.01" class="form-control" placeholder="@Localizer["Amount"]" required /></div>
                        <div class="col-6"><input name="currency" class="form-control" placeholder="@Localizer["Currency"]" required /></div>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="status" class="form-control" placeholder="@Localizer["Status"]" required /></div>
                        <div class="col-6"><input name="createdAt" type="datetime-local" class="form-control" required /></div>
                    </div>

                    <button type="submit" class="btn btn-primary">✅ @Localizer["CreatePayment"]</button>

                </form>

            </div>
        </div>
    </div>

    <!-- EDIT -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingEditPayment">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEditPayment">
                ✏️ @Localizer["EditPayment"]
            </button>
        </h2>

        <div id="collapseEditPayment" class="accordion-collapse collapse" data-bs-parent="#paymentAccordion">
            <div class="accordion-body">

                <form asp-action="EditPayment" asp-controller="Administrator" method="post" class="border p-3 rounded bg-light">

                    <div class="mb-2"><input name="id" type="number" class="form-control" placeholder="@Localizer["PaymentIdToEdit"]" required /></div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="userId" class="form-control" placeholder="@Localizer["UserId"]" required /></div>
                        <div class="col-6"><input name="courseId" class="form-control" placeholder="@Localizer["CourseId"]" required /></div>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="amount" type="number" step="0.01" class="form-control" placeholder="@Localizer["Amount"]" required /></div>
                        <div class="col-6"><input name="currency" class="form-control" placeholder="@Localizer["Currency"]" required /></div>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="status" class="form-control" placeholder="@Localizer["Status"]" required /></div>
                        <div class="col-6"><input name="createdAt" type="datetime-local" class="form-control" required /></div>
                    </div>

                    <button type="submit" class="btn btn-success">💾 @Localizer["SaveChanges"]</button>

                </form>

            </div>
        </div>
    </div>

</div>

<h4 class="mb-3">📋 @Localizer["AllPayments"]</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["Id"]</th>
            <th>@Localizer["User"]</th>
            <th>@Localizer["Course"]</th>
            <th>@Localizer["Amount"]</th>
            <th>@Localizer["Currency"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["CreatedAt"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var payment in Model)
        {
                <tr>
                    <td>@payment.Id</td>
                    <td>@payment.User?.FirstName @payment.User?.LastName (@payment.UserId)</td>
                    <td>@payment.Course?.Title (@payment.CourseId)</td>
                    <td>@payment.Amount</td>
                    <td>@payment.Currency</td>
                    <td>@payment.Status</td>
                    <td>@payment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>

                    <td>
                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewPayment-@payment.Id">
                            👁 @Localizer["View"]
                        </button>

                        <form asp-action="DeletePayment" asp-controller="Administrator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@payment.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">🗑 @Localizer["Delete"]</button>
                        </form>
                    </td>
                </tr>

                <!-- Modal -->
                <div class="modal fade" id="viewPayment-@payment.Id" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-md">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title">@Localizer["Payment"] #@payment.Id</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-body">

                                        <h5 class="card-title">@Localizer["Course"]: @payment.Course?.Title</h5>
                                        <p class="card-text">@Localizer["User"]: @payment.User?.FirstName @payment.User?.LastName</p>

                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">@Localizer["UserId"]: @payment.UserId</li>
                                            <li class="list-group-item">@Localizer["CourseId"]: @payment.CourseId</li>
                                            <li class="list-group-item">@Localizer["Amount"]: @payment.Amount</li>
                                            <li class="list-group-item">@Localizer["Currency"]: @payment.Currency</li>
                                            <li class="list-group-item">@Localizer["Status"]: @payment.Status</li>
                                            <li class="list-group-item">@Localizer["CreatedAt"]: @payment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</li>
                                        </ul>

                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                            </div>

                        </div>
                    </div>
                </div>
        }
    </tbody>
</table>