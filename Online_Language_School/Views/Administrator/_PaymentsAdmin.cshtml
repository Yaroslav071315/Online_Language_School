@model IEnumerable<Online_Language_School.Models.Payment>

<h4 class="mb-3">➕ Create Payment</h4>

<form asp-action="CreatePayment" asp-controller="Administrator" method="post" class="mb-5 border p-3 rounded bg-light">
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="userId" class="form-control" placeholder="User Id" required /></div>
        <div class="col-6"><input name="courseId" class="form-control" placeholder="Course Id" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="amount" type="number" step="0.01" class="form-control" placeholder="Amount" required /></div>
        <div class="col-6"><input name="currency" class="form-control" placeholder="Currency" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="status" class="form-control" placeholder="Status" required /></div>
        <div class="col-6"><input name="createdAt" type="datetime-local" class="form-control" required /></div>
    </div>
    <button type="submit" class="btn btn-primary">✅ Create Payment</button>
</form>

<h4 class="mb-3">✏️ Edit Payment</h4>

<form asp-action="EditPayment" asp-controller="Administrator" method="post" class="mb-5 border p-3 rounded bg-light">
    <div class="mb-2">
        <input name="id" type="number" class="form-control" placeholder="Payment Id to Edit" required />
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="userId" class="form-control" placeholder="User Id" required /></div>
        <div class="col-6"><input name="courseId" class="form-control" placeholder="Course Id" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="amount" type="number" step="0.01" class="form-control" placeholder="Amount" required /></div>
        <div class="col-6"><input name="currency" class="form-control" placeholder="Currency" required /></div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-6"><input name="status" class="form-control" placeholder="Status" required /></div>
        <div class="col-6"><input name="createdAt" type="datetime-local" class="form-control" required /></div>
    </div>
    <button type="submit" class="btn btn-success">💾 Save Changes</button>
</form>

<h4 class="mb-3">📋 All Payments</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>User Id</th>
            <th>User</th>
            <th>Course Id</th>
            <th>Course</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Id</td>
                <td>@payment.UserId</td>
                <td>@payment.User?.FirstName @payment.User?.LastName</td>
                <td>@payment.CourseId</td>
                <td>@payment.Course?.Title</td>
                <td>@payment.Amount</td>
                <td>@payment.Currency</td>
                <td>@payment.Status</td>
                <td>@payment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <form asp-action="DeletePayment" asp-controller="Administrator" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@payment.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">🗑 Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>