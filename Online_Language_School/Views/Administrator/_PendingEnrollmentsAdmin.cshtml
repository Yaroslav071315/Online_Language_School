@model IEnumerable<Online_Language_School.Models.Payment>

<h4 class="mb-3">Pending Enrollments</h4>

@if (!Model.Any())
{
        <p class="text-muted">No pending enrollments.</p>
}
else
{
        <table class="table table-bordered table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Receipt</th>
                    <th>Status</th>
                    <th style="width:220px">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@($"{p.User.FirstName} {p.User.LastName}")</td>
                    <td>@p.Course.Title</td>
                    <td>@p.Amount.ToString("F2") ₴</td>
                    <td>@p.CreatedAt.ToShortDateString()</td>
                    <td>
                        <a href="/uploads/@p.TransactionId" target="_blank" class="btn btn-sm btn-outline-primary">
                            View
                        </a>
                    </td>
                    <td>@p.Status</td>
                    <td>
                        @if (p.Status == "Success")
                        {
                            <form asp-action="CancelEnrollment" asp-controller="Administrator" method="post" class="d-inline" form-payments>
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="paymentId" value="@p.Id" />
                                <button class="btn btn-warning btn-sm">Cancel</button>
                            </form>
                        }
                        else if (p.Status != "Failed" || p.Status != "Canceled")
                        {
                            <form asp-action="ApproveEnrollment" asp-controller="Administrator" method="post" class="d-inline" form-payments>
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="paymentId" value="@p.Id" />
                                <button class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <form asp-action="RejectEnrollment" asp-controller="Administrator" method="post" class="d-inline" form-payments>
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="paymentId" value="@p.Id" />
                                <button class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}