@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model Online_Language_School.ViewModels.AdminOfficeViewModel

@{
    ViewData["Title"] = Localizer["AdminOfficeTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <!-- Ліва панель -->
        <nav class="col-2 bg-light border-end"
             style="position:fixed; top:0; left:0; height:100vh; overflow-y:auto; padding:20px;">

            <h5>@Localizer["Menu"]</h5>

            <ul class="nav flex-column nav-pills">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#users">@Localizer["Users"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#courses">@Localizer["Courses"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#news">@Localizer["News"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#payments">@Localizer["Payments"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#enrollments">@Localizer["Enrollments"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#chat">@Localizer["Chat"]</button></li>
            </ul>

            <hr />

            <footer class="small text-center">
                <p>📞 @Localizer["ContactInfo"]</p>
                <p>🌐 
                    <a href="#">@Localizer["Facebook"]</a> | 
                    <a href="#">@Localizer["Instagram"]</a> | 
                    <a href="#">@Localizer["LinkedIn"]</a>
                </p>
            </footer>
        </nav>

        <!-- Центральна частина -->
        <main class="col-10 offset-2 p-4">

            <h2 class="mb-4">@Localizer["AdminOfficeTitle"]</h2>

            <!-- Вкладки -->
            <ul class="nav nav-tabs" id="adminTabs" role="tablist">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#users" type="button">@Localizer["Users"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#courses" type="button">@Localizer["Courses"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#news" type="button">@Localizer["News"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#payments" type="button">@Localizer["Payments"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#enrollments" type="button">@Localizer["Enrollments"]</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#chat" type="button">@Localizer["Chat"]</button></li>
            </ul>

            <!-- Контент вкладок -->
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="users">
                    @Html.Partial("_UsersAdmin", Model.Users)
                </div>
                <div class="tab-pane fade" id="courses">
                    @Html.Partial("_CoursesAdmin", Model.Courses)
                </div>
                <div class="tab-pane fade" id="news">
                    @Html.Partial("_NewsAdmin", Model.News)
                </div>
                <div class="tab-pane fade" id="payments">
                    @Html.Partial("_PaymentsAdmin", Model.Payments)
                </div>
                <div class="tab-pane fade" id="enrollments">
                    @Html.Partial("_EnrollmentsAdmin", Model.Enrollments)
                </div>
                <div class="tab-pane fade" id="chat">
                    @Html.Partial("_ChatAdmin", Model.ChatMessages)
                </div>
            </div>

        </main>
    </div>
</div>