@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CourseDetailsTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <!-- Ліва панель -->
        <nav class="col-2 bg-light border-end"
             style="position:fixed; top:0; left:0; height:100vh; overflow:hidden; padding:20px;">

            <h5>@Localizer["Menu"]</h5>

            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Home")">@Localizer["Home"]</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Courses")">@Localizer["Courses"]</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Office","Student")">@Localizer["PersonalOffice"]</a></li>
                <li class="nav-item">
                    <a class="nav-link btn btn-success text-white mt-2" href="#">
                        @Localizer["EnrollButton"]
                    </a>
                </li>
            </ul>

            <hr />

            <footer class="small text-center">
                <p>📞 @Localizer["ContactInfo"]</p>
                <p>🌐 
                    <a href="#">@Localizer["Facebook"]</a> | 
                    <a href="#">@Localizer["Instagram"]</a> | 
                    <a href="#">@Localizer["LinkedIn"]</a>
                </p>
            </footer>
        </nav>

        <!-- Центральна частина -->
        <main class="col-10 offset-2 p-4">

            <h2 class="mb-4">@Localizer["MyOffice"]</h2>

            <!-- 📘 Course Overview -->
            <section class="mb-5">
                <h3>📘 @Localizer["CourseOverview"] – English B2</h3>
                <p>@Localizer["CourseOverviewText"]</p>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>@Localizer["Language"]:</strong> English</li>
                            <li class="list-group-item"><strong>@Localizer["Level"]:</strong> B2</li>
                            <li class="list-group-item"><strong>@Localizer["Format"]:</strong> Online, group</li>
                            <li class="list-group-item"><strong>@Localizer["Duration"]:</strong> 3 months</li>
                        </ul>
                    </div>
                </div>

                <button class="btn btn-primary btn-lg">@Localizer["EnrollButton"]</button>
            </section>

            <!-- 📖 Information About Course -->
            <section class="mb-5">
                <h3>📖 @Localizer["CourseInfo"]</h3>
                <p>@Localizer["CourseInfo1"]</p>
                <p>@Localizer["CourseInfo2"]</p>
                <p>@Localizer["CourseInfo3"]</p>
                <p>@Localizer["CourseInfo4"]</p>
            </section>

            <!-- 👩‍🏫 Information About Teacher -->
            <section class="mb-5">
                <h3>👩‍🏫 @Localizer["TeacherInfo"]</h3>

                <div class="row">
                    <div class="col-md-3">
                        <div class="border p-3 text-center">@Localizer["PhotoPlaceholder"]</div>
                    </div>

                    <div class="col-md-9">
                        <p><strong>@Localizer["TeacherName"]:</strong> John Smith</p>
                        <p><strong>@Localizer["Qualification"]:</strong> MA in Linguistics</p>
                        <p><strong>@Localizer["Experience"]:</strong> 10 years teaching English</p>
                        <p>@Localizer["TeacherStyle"]</p>
                    </div>
                </div>
            </section>

            <!-- ⭐ Feedback Section -->
            <section class="mb-5">
                <h3>⭐ @Localizer["Feedback"]</h3>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Anna K.</h5>
                        <p class="card-text">@Localizer["Feedback1"]</p>
                        <p>@Localizer["Rating"] ⭐⭐⭐⭐☆</p>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Oleh P.</h5>
                        <p class="card-text">@Localizer["Feedback2"]</p>
                        <p>@Localizer["Rating"] ⭐⭐⭐⭐⭐</p>
                    </div>
                </div>
            </section>

        </main>
    </div>
</div>