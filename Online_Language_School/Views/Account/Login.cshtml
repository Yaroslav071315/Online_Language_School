@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Ліва панель -->
    <aside class="col-md-3">
        <div class="p-3 bg-light border rounded">
            <h5>Navigation</h5>
            <button class="btn btn-success w-100 mb-2" onclick="location.href='@Url.Action("Index","Home")'">Main page</button>
            <button class="btn btn-info w-100" onclick="location.href='@Url.Action("Index","News")'">School news</button>
        </div>
    </aside>

    <!-- Центральна панель -->
    <section class="col-md-6 offset-md-1">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4>Log in</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input id="Email" name="email" type="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input id="Password" name="password" type="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Log in</button>
                </form>

                @if (ViewBag.Error != null)
                {
                        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                }

                <div class="mt-3 text-center">
                    <a href="#">Forgot your password?</a><br />
                    <span>Don't have an account? <a href="@Url.Action("Register","Account")">Sign up</a></span>
                </div>
            </div>
        </div>
    </section>
</div>
