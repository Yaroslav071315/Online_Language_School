@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["RegisterTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <section class="col-md-6 offset-md-3">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4>@Localizer["RegisterHeader"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label for="FirstName" class="form-label">@Localizer["FirstNameLabel"]</label>
                        <input name="FirstName" type="text" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="LastName" class="form-label">@Localizer["LastNameLabel"]</label>
                        <input name="LastName" type="text" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">@Localizer["EmailLabel"]</label>
                        <input name="Email" type="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">@Localizer["PasswordLabel"]</label>
                        <input name="Password" type="password" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="RepeatPassword" class="form-label">@Localizer["RepeatPasswordLabel"]</label>
                        <input name="RepeatPassword" type="password" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">@Localizer["CreateAccountButton"]</button>
                </form>

                @if (ViewBag.Error != null)
                {
                        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                }

                <div class="text-center mt-3">
                    @Localizer["AlreadyHaveAccount"] <a href="@Url.Action("Login","Account")">@Localizer["LoginLink"]</a>
                </div>
            </div>
        </div>
    </section>
</div>