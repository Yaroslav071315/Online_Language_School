@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Online_Language_School.Models.ChatMessage>

<h4>💬 @Localizer["ChatTeacher"]</h4>

<!-- Форма для відправки повідомлення -->
<form asp-action="SendMessage" asp-controller="Teacher" method="post" class="mb-3 border p-3 rounded bg-light">
    <div class="row g-2 mb-2">
        <div class="col-4">
            <input name="receiverId" class="form-control" placeholder="@Localizer["ReceiverIdPlaceholder"]" required />
        </div>
        <div class="col-6">
            <input name="content" class="form-control" placeholder="@Localizer["MessagePlaceholder"]" required />
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary w-100">📩 @Localizer["SendButton"]</button>
        </div>
    </div>
</form>

<!-- Таблиця повідомлень -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["Sender"]</th>
            <th>@Localizer["Receiver"]</th>
            <th>@Localizer["Message"]</th>
            <th>@Localizer["SentAt"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
                <tr>
                    <td>@msg.Sender?.FirstName @msg.Sender?.LastName (@msg.SenderId)</td>
                    <td>@msg.Receiver?.FirstName @msg.Receiver?.LastName (@msg.ReceiverId)</td>
                    <td>@msg.Content</td>
                    <td>@msg.SentAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
        }
    </tbody>
</table>