@model IEnumerable<Online_Language_School.Models.LessonMaterial>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h4 class="mb-3">@Localizer["MaterialsManagement"]</h4>

<!-- Accordion -->
<div class="accordion mb-4" id="materialAccordion">
    <!-- CREATE MATERIAL -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingCreateMaterial">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCreateMaterial">
                @Localizer["CreateMaterial"]
            </button>
        </h2>
        <div id="collapseCreateMaterial" class="accordion-collapse collapse show" data-bs-parent="#materialAccordion">
            <div class="accordion-body">
                <form asp-action="CreateMaterial" asp-controller="Teacher" method="post" class="border p-3 rounded bg-light mb-4">

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="title" class="form-control" placeholder="@Localizer["MaterialTitle"]" required /></div>
                        <div class="col-6"><input name="fileUrl" class="form-control" placeholder="@Localizer["FileUrl"]" required /></div>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <select name="fileType" class="form-select" required>
                                <option value="">-- @Localizer["SelectType"] --</option>
                                <option>PDF</option>
                                <option>@Localizer["Video"]</option>
                                <option>@Localizer["Document"]</option>
                            </select>
                        </div>
                        <div class="col-4"><input name="fileSize" type="number" class="form-control" placeholder="@Localizer["FileSize"]" /></div>
                        <div class="col-4"><input name="expiryDate" type="date" class="form-control" /></div>
                    </div>

                    <div class="mb-2">
                        <select name="lessonId" class="form-select" required>
                            <option value="">-- @Localizer["SelectLesson"] --</option>
                            @if (ViewBag.Lessons != null)
                            {
                                foreach (var lesson in ViewBag.Lessons)
                                {
                                            <option value="@lesson.Id">@lesson.Title (@lesson.ScheduledDate?.ToString("yyyy-MM-dd"))</option>
                                }
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">@Localizer["AddMaterial"]</button>
                </form>
            </div>
        </div>
    </div>

    <!-- EDIT MATERIAL -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingEditMaterial">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEditMaterial">
                @Localizer["EditMaterial"]
            </button>
        </h2>
        <div id="collapseEditMaterial" class="accordion-collapse collapse" data-bs-parent="#materialAccordion">
            <div class="accordion-body">
                <form asp-action="EditMaterial" asp-controller="Teacher" method="post" class="border p-3 rounded bg-light mb-4">

                    <div class="mb-2">
                        <select name="id" class="form-select" required>
                            <option value="">-- @Localizer["SelectMaterial"] --</option>
                            @if (Model != null)
                            {
                                foreach (var material in Model)
                                {
                                            <option value="@material.Id">@material.Title (@material.FileType, Lesson: @material.Lesson?.Title)</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="title" class="form-control" placeholder="@Localizer["NewTitle"]" required /></div>
                        <div class="col-6"><input name="fileUrl" class="form-control" placeholder="@Localizer["NewFileUrl"]" required /></div>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <select name="fileType" class="form-select" required>
                                <option value="">-- @Localizer["SelectType"] --</option>
                                <option>PDF</option>
                                <option>@Localizer["Video"]</option>
                                <option>@Localizer["Document"]</option>
                            </select>
                        </div>
                        <div class="col-4"><input name="fileSize" type="number" class="form-control" placeholder="@Localizer["FileSize"]" /></div>
                        <div class="col-4"><input name="expiryDate" type="date" class="form-control" /></div>
                    </div>

                    <div class="mb-2">
                        <select name="lessonId" class="form-select" required>
                            <option value="">-- @Localizer["SelectLesson"] --</option>
                            @foreach (var lesson in ViewBag.Lessons)
                            {
                                    <option value="@lesson.Id">@lesson.Title (@lesson.ScheduledDate?.ToString("yyyy-MM-dd"))</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-warning">@Localizer["SaveChanges"]</button>
                </form>
            </div>
        </div>
    </div>
</div>


<h4 class="mb-3">@Localizer["AllMaterials"]</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["Id"]</th>
            <th>@Localizer["Title"]</th>
            <th>@Localizer["Type"]</th>
            <th>@Localizer["Lesson"]</th>
            <th>@Localizer["FileUrl"]</th>
            <th>@Localizer["FileSize"]</th>
            <th>@Localizer["Uploaded"]</th>
            <th>@Localizer["Expiry"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var material in Model)
            {
                        <tr>
                            <td>@material.Id</td>
                            <td>@material.Title</td>
                            <td>@material.FileType</td>
                            <td>@material.Lesson?.Title (@material.LessonId)</td>
                            <td><a href="@material.FileUrl" target="_blank">@Localizer["Open"]</a></td>
                            <td>@material.FileSize</td>
                            <td>@material.UploadedAt.ToShortDateString()</td>
                            <td>@(material.ExpiryDate?.ToShortDateString() ?? "-")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewMaterial-@material.Id">
                            @Localizer["View"]
                                </button>

                                <form asp-action="DeleteMaterial" asp-controller="Teacher" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@material.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">@Localizer["Delete"]</button>
                                </form>
                            </td>
                        </tr>

                        <!-- MODAL -->
                        <div class="modal fade" id="viewMaterial-@material.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@material.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">@Localizer["Lesson"]: @material.Lesson?.Title</h5>
                                                <p class="card-text">@Localizer["Type"]: @material.FileType</p>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">@Localizer["FileUrl"]: <a href="@material.FileUrl" target="_blank">@material.FileUrl</a></li>
                                                    <li class="list-group-item">@Localizer["FileSize"]: @material.FileSize bytes</li>
                                                    <li class="list-group-item">@Localizer["Uploaded"]: @material.UploadedAt.ToShortDateString()</li>
                                                    <li class="list-group-item">@Localizer["Expiry"]: @(material.ExpiryDate?.ToShortDateString() ?? "-")</li>
                                                    <li class="list-group-item">@Localizer["MaterialId"]: @material.Id</li>
                                                    <li class="list-group-item">@Localizer["LessonId"]: @material.LessonId</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
        }
        else
        {
                <tr>
                    <td colspan="9" class="text-center text-muted">@Localizer["NoMaterials"]</td>
                </tr>
        }
    </tbody>
</table>
