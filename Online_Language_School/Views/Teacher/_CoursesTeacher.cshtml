@model IEnumerable<Course>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">📚 Courses</h5>
    <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#createCourseModal">➕</button>
</div>

<!-- Модальне вікно створення курсу -->
<div class="modal fade" id="createCourseModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="CreateCourse" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Create course</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-2 mb-2">
                        <div class="col-6">
                            <input name="Title" class="form-control" placeholder="Course title" required />
                        </div>
                        <div class="col-6">
                            <input name="Language" class="form-control" placeholder="Language" required />
                        </div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <select name="Level" class="form-select" required>
                                <option value="">Level</option>
                                <option>A1</option><option>A2</option>
                                <option>B1</option><option>B2</option>
                                <option>C1</option><option>C2</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <select name="Format" class="form-select" required>
                                <option value="">Format</option>
                                <option>Individual</option>
                                <option>Group</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <input name="Price" type="number" step="0.01" class="form-control" placeholder="Price" />
                        </div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-6">
                            <input name="MaxStudents" type="number" class="form-control" placeholder="Max students" />
                        </div>
                        <div class="col-6">
                            <input name="ImageUrl" class="form-control" placeholder="Image URL (optional)" />
                        </div>
                    </div>
                    <div class="mb-2">
                        <textarea name="Description" class="form-control" rows="5" placeholder="Course description" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Сітка карток курсів -->
@if (Model.Any())
{
        <div class="row">
        @foreach (var course in Model)
        {
                    <div class="col-md-4 mb-4">
                            <a href="/Teacher/EditCourse/@course.Id" class="text-decoration-none" edit-materials>
                            <div class="card h-100 shadow-sm">
                                <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" />
                                <div class="card-body">
                                    <h5 class="card-title">@course.Title</h5>
                                    <p class="card-text">@course.Description</p>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">📖 Language: @course.Language</li>
                                        <li class="list-group-item">🎯 Level: @course.Level</li>
                                        <li class="list-group-item">👥 Max Students: @course.MaxStudents</li>
                                        <li class="list-group-item">💳 Price: @course.Price.ToString("F2") ₴</li>
                                        <li class="list-group-item">🖥 Format: @course.Format</li>
                                        <li class="list-group-item">Status: @course.Status</li>
                                    </ul>
                                </div>
                            </div>
                        </a>
                    </div>
        }
        </div>
}
else
{
        <p class="text-muted text-center mt-5">❌ No courses found for selected filters.</p>
}
