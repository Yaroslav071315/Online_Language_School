@model IEnumerable<Online_Language_School.Models.Test>

<h4 class="mb-3">📝 Tests Management</h4>

<!-- Accordion для Create/Edit -->
<div class="accordion mb-4" id="testAccordion">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingCreateTest">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCreateTest">
                ➕ Create Test
            </button>
        </h2>
        <div id="collapseCreateTest" class="accordion-collapse collapse show" data-bs-parent="#testAccordion">
            <div class="accordion-body">
                <form asp-action="CreateTest" asp-controller="Teacher" method="post" class="border p-3 rounded bg-light mb-4">
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="title" class="form-control" placeholder="Test Title" required /></div>
                        <div class="col-6"><input name="passingScore" type="number" class="form-control" placeholder="Passing Score" /></div>
                    </div>
                    <div class="mb-2"><textarea name="description" class="form-control" placeholder="Description"></textarea></div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="timeLimit" type="number" class="form-control" placeholder="Time Limit (minutes)" /></div>
                        <div class="col-6">
                            <select name="lessonId" class="form-select" required>
                                <option value="">-- Select Lesson --</option>
                                @if (ViewBag.Lessons != null)
                                {
                                    foreach (var lesson in ViewBag.Lessons)
                                    {
                                        <option value="@lesson.Id">@lesson.Title (@lesson.ScheduledDate?.ToString("yyyy-MM-dd"))</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">✅ Add Test</button>
                </form>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingEditTest">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEditTest">
                ✏️ Edit Test
            </button>
        </h2>
        <div id="collapseEditTest" class="accordion-collapse collapse" data-bs-parent="#testAccordion">
            <div class="accordion-body">
                <form asp-action="EditTest" asp-controller="Teacher" method="post" class="border p-3 rounded bg-light mb-4">
                    <div class="mb-2">
                        <select name="id" class="form-select" required>
                            <option value="">-- Select Test --</option>
                            @if (Model != null)
                            {
                                foreach (var test in Model)
                                {
                                    <option value="@test.Id">@test.Title (@test.Lesson?.Title, Id: @test.Id)</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="title" class="form-control" placeholder="New Title" required /></div>
                        <div class="col-6"><input name="passingScore" type="number" class="form-control" placeholder="Passing Score" /></div>
                    </div>
                    <div class="mb-2"><textarea name="description" class="form-control" placeholder="New Description"></textarea></div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="timeLimit" type="number" class="form-control" placeholder="Time Limit (minutes)" /></div>
                        <div class="col-6">
                            <select name="lessonId" class="form-select" required>
                                <option value="">-- Select Lesson --</option>
                                @if (ViewBag.Lessons != null)
                                {
                                    foreach (var lesson in ViewBag.Lessons)
                                    {
                                        <option value="@lesson.Id">@lesson.Title (@lesson.ScheduledDate?.ToString("yyyy-MM-dd"))</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-check-label">
                            <input type="checkbox" name="isActive" value="true" class="form-check-input" /> Active
                        </label>
                    </div>
                    <button type="submit" class="btn btn-warning">💾 Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">📋 All Tests</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Lesson</th>
            <th>Time Limit</th>
            <th>Passing Score</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var test in Model)
            {
                <tr>
                    <td>@test.Id</td>
                    <td>@test.Title</td>
                    <td>@test.Description</td>
                    <td>@test.Lesson?.Title (@test.LessonId)</td>
                    <td>@test.TimeLimit min</td>
                    <td>@test.PassingScore</td>
                    <td>@(test.IsActive ? "✅" : "❌")</td>
                    <td>
                        <!-- View button -->
                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewTest-@test.Id">
                            👁 View
                        </button>

                        <form asp-action="DeleteTest" asp-controller="Teacher" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@test.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">🗑 Delete</button>
                        </form>
                    </td>
                </tr>

                <!-- Modal with Bootstrap Card -->
                <div class="modal fade" id="viewTest-@test.Id" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@test.Title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Lesson: @test.Lesson?.Title</h5>
                                        <p class="card-text">@test.Description</p>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">Time Limit: @test.TimeLimit min</li>
                                            <li class="list-group-item">Passing Score: @test.PassingScore</li>
                                            <li class="list-group-item">Active: @(test.IsActive ? "Yes" : "No")</li>
                                            <li class="list-group-item">Test Id: @test.Id</li>
                                            <li class="list-group-item">Lesson Id: @test.LessonId</li>
                                        </ul>
                                        <hr />
                                        <h6>Questions:</h6>
                                        @if (test.Questions != null && test.Questions.Any())
                                        {
                                            <ul>
                                                @foreach (var q in test.Questions)
                                                {
                                                    <li>
                                                        <strong>@q.QuestionText</strong> (@q.Points pts)
                                                        <ul>
                                                            @foreach (var a in q.Answers ?? new List<Online_Language_School.Models.Answer>())
                                                            {
                                                                <li>@a.AnswerText @(a.IsCorrect ? "✔️" : "")</li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted">No questions added</p>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No tests created</td>
            </tr>
        }
    </tbody>
</table>