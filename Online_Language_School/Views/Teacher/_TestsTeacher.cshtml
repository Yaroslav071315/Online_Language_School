@model IEnumerable<Online_Language_School.Models.Test>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h4 class="mb-3">@Localizer["TestsManagement"]</h4>

<div class="accordion mb-4" id="testAccordion">

    <!-- CREATE TEST -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingCreateTest">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCreateTest">
                @Localizer["CreateTest"]
            </button>
        </h2>
        <div id="collapseCreateTest" class="accordion-collapse collapse show" data-bs-parent="#testAccordion">
            <div class="accordion-body">

                <form asp-action="CreateTest" asp-controller="Teacher" method="post" class="border p-3 rounded bg-light mb-4">

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="title" class="form-control" placeholder="@Localizer["TestTitle"]" required /></div>
                        <div class="col-6"><input name="passingScore" type="number" class="form-control" placeholder="@Localizer["PassingScore"]" /></div>
                    </div>

                    <div class="mb-2">
                        <textarea name="description" class="form-control" placeholder="@Localizer["Description"]"></textarea>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="timeLimit" type="number" class="form-control" placeholder="@Localizer["TimeLimit"]" /></div>

                        <div class="col-6">
                            <select name="lessonId" class="form-select" required>
                                <option value="">-- @Localizer["SelectLesson"] --</option>
                                @if (ViewBag.Lessons != null)
                                {
                                    foreach (var lesson in ViewBag.Lessons)
                                    {
                                                <option value="@lesson.Id">@lesson.Title (@lesson.ScheduledDate?.ToString("yyyy-MM-dd"))</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">@Localizer["AddTest"]</button>
                </form>
            </div>
        </div>
    </div>


    <!-- EDIT TEST -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingEditTest">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEditTest">
                @Localizer["EditTest"]
            </button>
        </h2>
        <div id="collapseEditTest" class="accordion-collapse collapse" data-bs-parent="#testAccordion">
            <div class="accordion-body">

                <form asp-action="EditTest" asp-controller="Teacher" method="post" class="border p-3 rounded bg-light mb-4">

                    <div class="mb-2">
                        <select name="id" class="form-select" required>
                            <option value="">-- @Localizer["SelectTest"] --</option>
                            @if (Model != null)
                            {
                                foreach (var test in Model)
                                {
                                            <option value="@test.Id">@test.Title (@test.Lesson?.Title)</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="title" class="form-control" placeholder="@Localizer["NewTitle"]" required /></div>
                        <div class="col-6"><input name="passingScore" type="number" class="form-control" placeholder="@Localizer["PassingScore"]" /></div>
                    </div>

                    <div class="mb-2"><textarea name="description" class="form-control" placeholder="@Localizer["NewDescription"]"></textarea></div>

                    <div class="row g-2 mb-2">
                        <div class="col-6"><input name="timeLimit" type="number" class="form-control" placeholder="@Localizer["TimeLimit"]" /></div>

                        <div class="col-6">
                            <select name="lessonId" class="form-select" required>
                                <option value="">-- @Localizer["SelectLesson"] --</option>
                                @foreach (var lesson in ViewBag.Lessons)
                                {
                                        <option value="@lesson.Id">@lesson.Title (@lesson.ScheduledDate?.ToString("yyyy-MM-dd"))</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label class="form-check-label">
                            <input type="checkbox" name="isActive" value="true" class="form-check-input" />
                            @Localizer["Active"]
                        </label>
                    </div>

                    <button type="submit" class="btn btn-warning">@Localizer["SaveChanges"]</button>
                </form>

            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">@Localizer["AllTests"]</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["Id"]</th>
            <th>@Localizer["Title"]</th>
            <th>@Localizer["Description"]</th>
            <th>@Localizer["Lesson"]</th>
            <th>@Localizer["TimeLimit"]</th>
            <th>@Localizer["PassingScore"]</th>
            <th>@Localizer["Active"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var test in Model)
            {
                        <tr>
                            <td>@test.Id</td>
                            <td>@test.Title</td>
                            <td>@test.Description</td>
                            <td>@test.Lesson?.Title (@test.LessonId)</td>
                            <td>@test.TimeLimit min</td>
                            <td>@test.PassingScore</td>
                            <td>@(test.IsActive ? "✅" : "❌")</td>

                            <td>
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewTest-@test.Id">
                            @Localizer["View"]
                                </button>

                                <form asp-action="DeleteTest" asp-controller="Teacher" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@test.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">@Localizer["Delete"]</button>
                                </form>
                            </td>
                        </tr>

                        <!-- MODAL -->
                        <div class="modal fade" id="viewTest-@test.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h5 class="modal-title">@test.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">

                                                <h5 class="card-title">@Localizer["Lesson"]: @test.Lesson?.Title</h5>
                                                <p class="card-text">@test.Description</p>

                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">@Localizer["TimeLimit"]: @test.TimeLimit min</li>
                                                    <li class="list-group-item">@Localizer["PassingScore"]: @test.PassingScore</li>
                                                    <li class="list-group-item">@Localizer["Active"]: @(test.IsActive ? Localizer["Yes"] : Localizer["No"])</li>
                                                    <li class="list-group-item">@Localizer["TestId"]: @test.Id</li>
                                                    <li class="list-group-item">@Localizer["LessonId"]: @test.LessonId</li>
                                                </ul>

                                                <hr />
                                                <h6>@Localizer["Questions"]:</h6>

                                        @if (test.Questions != null && test.Questions.Any())
                                        {
                                                        <ul>
                                                @foreach (var q in test.Questions)
                                                {
                                                                    <li>
                                                                        <strong>@q.QuestionText</strong> (@q.Points pts)
                                                                        <ul>
                                                            @foreach (var a in q.Answers ?? new List<Online_Language_School.Models.Answer>())
                                                            {
                                                                                    <li>@a.AnswerText @(a.IsCorrect ? "✔️" : "")</li>
                                                            }
                                                                        </ul>
                                                                    </li>
                                                }
                                                        </ul>
                                        }
                                        else
                                        {
                                                        <p class="text-muted">@Localizer["NoQuestions"]</p>
                                        }

                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                                    </div>

                                </div>
                            </div>
                        </div>

            }
        }
        else
        {
                <tr>
                    <td colspan="8" class="text-center text-muted">@Localizer["NoTests"]</td>
                </tr>
        }
    </tbody>
</table>
