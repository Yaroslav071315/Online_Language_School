@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<section id="about">
    <details>
        <summary>🏫 @Localizer["AboutTitle"]</summary>
        <p>@Localizer["AboutDescription"]</p>
        <img src="https://via.placeholder.com/600x200" 
             alt="@Localizer["AboutImageAlt"]" 
             style="width:100%; border-radius:8px; margin-top:10px;" />
        <a class="btn btn-success" href="@Url.Action("Details", "Courses", new { id = 1 })">
            @Localizer["AboutButton"]
        </a>
    </details>
</section>