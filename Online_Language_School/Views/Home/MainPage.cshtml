@{
    ViewData["Title"] = "Online Language School";
    Layout = null;
    <!-- повноекранна сторінка -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/homePageStyles.css" />
</head>
<body>
    <!-- Sidebar -->
    <nav>
        <h2>Menu</h2>
        <ul>
            <li><a href="#about">About school</a></li>
            <li><a href="#advantages">Advantages</a></li>
            <li><a href="#contacts">Our contacts</a></li>
            <li><a href="#news">School news</a></li>
            <li><a href="/Account/Login">Log in / Sign up</a></li>
        </ul>
        <button class="theme-toggle" onclick="toggleTheme()">🌙 Toggle Theme</button>
    </nav>

    <!-- Main content -->
    <main>
        @Html.Partial("_Hero")
        @Html.Partial("_About")
        @Html.Partial("_Advantages")
        @Html.Partial("_WhyChooseUs")
        @Html.Partial("_Footer")
    </main>


    <script>
        function toggleTheme() {
            document.body.classList.toggle("dark");
        }
    </script>
</body>
</html>