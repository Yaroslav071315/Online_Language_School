@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Online_Language_School.Models.Lesson>

<h4 class="mb-3">📚 @Localizer["MyClasses"]</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["DateTime"]</th>
            <th>@Localizer["Course"]</th>
            <th>@Localizer["Title"]</th>
            <th>@Localizer["Description"]</th>
            <th>@Localizer["Duration"]</th>
            <th>@Localizer["Order"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var lesson in Model)
            {
                        <tr>
                            <td>@(lesson.ScheduledDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            <td>@lesson.Course?.Title</td>
                            <td>@lesson.Title</td>
                            <td>@lesson.Description</td>
                            <td>@lesson.DurationMinutes @Localizer["Minutes"]</td>
                            <td>@lesson.OrderNumber</td>
                            <td>
                        @(lesson.ScheduledDate.HasValue && lesson.ScheduledDate.Value > DateTime.Now
                                ? Localizer["Planned"]
                                : Localizer["Completed"])
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewLesson-@lesson.Id">
                                    👁 @Localizer["View"]
                                </button>
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="viewLesson-@lesson.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@lesson.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">@Localizer["Course"]: @lesson.Course?.Title</h5>
                                                <p class="card-text">@lesson.Description</p>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">@Localizer["Scheduled"]: @(lesson.ScheduledDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</li>
                                                    <li class="list-group-item">@Localizer["Duration"]: @lesson.DurationMinutes @Localizer["Minutes"]</li>
                                                    <li class="list-group-item">@Localizer["Order"]: @lesson.OrderNumber</li>
                                                    <li class="list-group-item">@Localizer["Status"]: @(lesson.ScheduledDate.HasValue && lesson.ScheduledDate.Value > DateTime.Now ? Localizer["Planned"] : Localizer["Completed"])</li>
                                                    <li class="list-group-item">@Localizer["LessonId"]: @lesson.Id</li>
                                                    <li class="list-group-item">@Localizer["CourseId"]: @lesson.CourseId</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
        }
        else
        {
                <tr>
                    <td colspan="8" class="text-center text-muted">@Localizer["NoLessons"]</td>
                </tr>
        }
    </tbody>
</table>

<h4 class="mb-3">📅 @Localizer["Calendar"]</h4>
<!-- календар залишаємо як є, тільки заголовки -->
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>@Localizer["Mon"]</th>
            <th>@Localizer["Tue"]</th>
            <th>@Localizer["Wed"]</th>
            <th>@Localizer["Thu"]</th>
            <th>@Localizer["Fri"]</th>
            <th>@Localizer["Sat"]</th>
            <th>@Localizer["Sun"]</th>
        </tr>
    </thead>
    <!-- тіло календаря генерується кодом -->
</table>

<h4 class="mb-3">📌 @Localizer["UpcomingClasses"]</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["DateTime"]</th>
            <th>@Localizer["Course"]</th>
            <th>@Localizer["Theme"]</th>
            <th>@Localizer["Status"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any(l => l.ScheduledDate.HasValue && l.ScheduledDate.Value > DateTime.Now))
        {
            foreach (var lesson in Model.Where(l => l.ScheduledDate.HasValue && l.ScheduledDate.Value > DateTime.Now).OrderBy(l => l.ScheduledDate).Take(5))
            {
                        <tr>
                            <td>@lesson.ScheduledDate?.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@lesson.Course?.Title</td>
                            <td>@lesson.Title</td>
                            <td>@Localizer["Planned"]</td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="4" class="text-center text-muted">@Localizer["NoUpcomingClasses"]</td>
                </tr>
        }
    </tbody>
</table>