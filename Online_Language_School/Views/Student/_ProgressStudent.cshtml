@model IEnumerable<Online_Language_School.Models.Test>

<h4>📊 Progress (All Tests)</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Theme</th>
            <th>Lesson</th>
            <th>Course</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var test in Model)
            {
                        <tr>
                            <td>@test.Title</td>
                            <td>@test.Lesson?.Title</td>
                            <td>@test.Lesson?.Course?.Title</td>
                            <td>Test</td>
                            <td>
                                <!-- View button -->
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewTest-@test.Id">
                                    👁 View
                                </button>

                                <a class="btn btn-sm btn-warning"
                                   href="@Url.Action("PassTest", "Student", new { id = test.Id })">
                                    Pass
                                </a>
                            </td>
                        </tr>

                        <!-- Modal with Bootstrap Card -->
                        <div class="modal fade" id="viewTest-@test.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@test.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">Lesson: @test.Lesson?.Title</h5>
                                                <p class="card-text">@test.Description</p>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">Course: @test.Lesson?.Course?.Title</li>
                                                    <li class="list-group-item">Time Limit: @test.TimeLimit min</li>
                                                    <li class="list-group-item">Passing Score: @test.PassingScore</li>
                                                    <li class="list-group-item">Active: @(test.IsActive ? "Yes" : "No")</li>
                                                    <li class="list-group-item">Questions: @(test.Questions?.Count() ?? 0)</li>
                                                    <li class="list-group-item">Test Id: @test.Id</li>
                                                    <li class="list-group-item">Lesson Id: @test.LessonId</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <a class="btn btn-warning"
                                           href="@Url.Action("PassTest", "Student", new { id = test.Id })">
                                            Start Test
                                        </a>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
        }
        else
        {
                <tr>
                    <td colspan="5" class="text-center text-muted">No tests available</td>
                </tr>
        }
    </tbody>
</table>