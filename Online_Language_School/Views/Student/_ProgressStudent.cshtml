@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Online_Language_School.Models.Test>

<h4>📊 @Localizer["ProgressAllTests"]</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["Theme"]</th>
            <th>@Localizer["Lesson"]</th>
            <th>@Localizer["Course"]</th>
            <th>@Localizer["Type"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var test in Model)
            {
                        <tr>
                            <td>@test.Title</td>
                            <td>@test.Lesson?.Title</td>
                            <td>@test.Lesson?.Course?.Title</td>
                            <td>@Localizer["TestType"]</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewTest-@test.Id">
                                    👁 @Localizer["View"]
                                </button>
                                <a class="btn btn-sm btn-warning"
                                   href="@Url.Action("PassTest", "Student", new { id = test.Id })">
                            @Localizer["Pass"]
                                </a>
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="viewTest-@test.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@test.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">@Localizer["Lesson"]: @test.Lesson?.Title</h5>
                                                <p class="card-text">@test.Description</p>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">@Localizer["Course"]: @test.Lesson?.Course?.Title</li>
                                                    <li class="list-group-item">@Localizer["TimeLimit"]: @test.TimeLimit @Localizer["Minutes"]</li>
                                                    <li class="list-group-item">@Localizer["PassingScore"]: @test.PassingScore</li>
                                                    <li class="list-group-item">@Localizer["Active"]: @(test.IsActive ? Localizer["Yes"] : Localizer["No"])</li>
                                                    <li class="list-group-item">@Localizer["Questions"]: @(test.Questions?.Count() ?? 0)</li>
                                                    <li class="list-group-item">@Localizer["TestId"]: @test.Id</li>
                                                    <li class="list-group-item">@Localizer["LessonId"]: @test.LessonId</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <a class="btn btn-warning"
                                           href="@Url.Action("PassTest", "Student", new { id = test.Id })">
                                    @Localizer["StartTest"]
                                        </a>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
        }
        else
        {
                <tr>
                    <td colspan="5" class="text-center text-muted">@Localizer["NoTests"]</td>
                </tr>
        }
    </tbody>
</table>