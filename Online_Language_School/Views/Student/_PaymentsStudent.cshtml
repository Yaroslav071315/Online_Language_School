@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Online_Language_School.Models.Payment>

<h4>💳 @Localizer["Payments"]</h4>
<p>@Localizer["TotalPayments"]: @ViewBag.Count</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["DateTime"]</th>
            <th>@Localizer["Course"]</th>
            <th>@Localizer["Amount"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var payment in Model)
            {
                        <tr>
                            <td>@payment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@payment.Course?.Title</td>
                            <td>@payment.Amount @payment.Currency</td>
                            <td>
                        @if (payment.Status == "Pending")
                        {
                                        <span class="badge bg-warning text-dark">@Localizer["Pending"]</span>
                        }
                        else if (payment.Status == "Completed")
                        {
                                        <span class="badge bg-success">@Localizer["Completed"]</span>
                        }
                        else
                        {
                                        <span class="badge bg-secondary">@payment.Status</span>
                        }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewPayment-@payment.Id">
                                    👁 @Localizer["View"]
                                </button>

                        @if (payment.Status == "Pending")
                        {
                                        <button class="btn btn-sm btn-primary">@Localizer["UploadReceipt"]</button>
                        }
                        else
                        {
                                        <span class="text-muted">-</span>
                        }
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="viewPayment-@payment.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@Localizer["Payment"] #@payment.Id</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">@Localizer["Course"]: @payment.Course?.Title</h5>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">@Localizer["Amount"]: @payment.Amount @payment.Currency</li>
                                                    <li class="list-group-item">@Localizer["Status"]: @payment.Status</li>
                                                    <li class="list-group-item">@Localizer["CreatedAt"]: @payment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</li>
                                                    <li class="list-group-item">@Localizer["PaymentId"]: @payment.Id</li>
                                                    <li class="list-group-item">@Localizer["CourseId"]: @payment.CourseId</li>
                                                    <li class="list-group-item">@Localizer["UserId"]: @payment.UserId</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                @if (payment.Status == "Pending")
                                {
                                                <button class="btn btn-primary">@Localizer["UploadReceipt"]</button>
                                }
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
        }
        else
        {
                <tr>
                    <td colspan="5" class="text-center text-muted">@Localizer["NoPayments"]</td>
                </tr>
        }
    </tbody>
</table>