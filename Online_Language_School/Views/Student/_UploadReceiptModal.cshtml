@model Online_Language_School.Models.Course

<div class="modal fade" id="uploadReceiptModal-@Model.Id" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UploadReceipt" asp-controller="Student"
                  method="post" enctype="multipart/form-data" course-payment>
                @Html.AntiForgeryToken()
                <input type="hidden" name="courseId" value="@Model.Id" />

                <div class="modal-header">
                    <h5 class="modal-title">Upload payment receipt</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Receipt file</label>
                    <input type="file" name="receiptFile" class="form-control" accept="image/*,.pdf" required />
                    <div class="form-text">Admins will review your receipt.</div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
