@model IEnumerable<Online_Language_School.Models.ChatMessage>

<h4>💬 Chat (Student)</h4>

<!-- Форма для відправки повідомлення -->
<form asp-action="SendMessage" asp-controller="Student" method="post" class="mb-3 border p-3 rounded bg-light">
    <div class="row g-2 mb-2">
        <div class="col-4">
            <input name="receiverId" class="form-control" placeholder="Receiver Id" required />
        </div>
        <div class="col-6">
            <input name="content" class="form-control" placeholder="Type your message..." required />
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary w-100">📩 Send</button>
        </div>
    </div>
</form>

<!-- Таблиця повідомлень -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Message</th>
            <th>Sent At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
                <tr>
                    <td>@msg.Sender?.FirstName @msg.Sender?.LastName (@msg.SenderId)</td>
                    <td>@msg.Receiver?.FirstName @msg.Receiver?.LastName (@msg.ReceiverId)</td>
                    <td>@msg.Content</td>
                    <td>@msg.SentAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
        }
    </tbody>
</table>