@using Online_Language_School.ViewModels
@using Online_Language_School.Models
@model CourseSearchViewModel

<div class="card mb-3 p-3 bg-light">
    <form method="get" asp-action="Courses" asp-controller="Student" id="courseSearchForm">
        <div class="row g-2">
            <div class="col-md-2">
                <input type="number" name="MaxStudents" value="@Model.MaxStudents" class="form-control" placeholder="Max Students" />
            </div>
            <div class="col-md-2">
                <input type="text" name="Level" value="@Model.Level" class="form-control" placeholder="Level" />
            </div>
            <div class="col-md-2">
                <input type="text" name="Language" value="@Model.Language" class="form-control" placeholder="Language" />
            </div>
            <div class="col-md-2">
                <input type="number" step="0.01" name="Price" value="@Model.Price" class="form-control" placeholder="Max Price" />
            </div>
            <div class="col-md-2">
                <input type="text" name="Format" value="@Model.Format" class="form-control" placeholder="Format" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">🔍 Search</button>
            </div>
        </div>
    </form>
</div>

@if (Model.Courses.Any())
{
        <div class="row">
        @foreach (var course in Model.Courses)
        {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" />
                            <div class="card-body">
                                <h5 class="card-title">@course.Title</h5>
                                <p class="card-text">@course.Description</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">📖 Language: @course.Language</li>
                                    <li class="list-group-item">🎯 Level: @course.Level</li>
                                    <li class="list-group-item">👥 Max Students: @course.MaxStudents</li>
                                    <li class="list-group-item">💳 Price: @course.Price ₴</li>
                                    <li class="list-group-item">🖥 Format: @course.Format</li>
                                </ul>
                            </div>
                        </div>
                    </div>
        }
        </div>
}
else
{
        <p class="text-muted">❌ No courses found for selected filters.</p>
}