@model Online_Language_School.ViewModels.CourseSearchViewModel
@using Online_Language_School.Models

<div class="card mb-3 p-3 bg-light">
    <form method="get" asp-action="Courses" asp-controller="Student" search-courses>
        <div class="row g-2">
            <div class="col-md-2">
                <input name="Title" value="@Model.Title" class="form-control" placeholder="Title" />
            </div>
            <div class="col-md-2">
                <input name="Format" value="@Model.Format" class="form-control" placeholder="Format" />
            </div>
            <div class="col-md-2">
                <input name="Language" value="@Model.Language" class="form-control" placeholder="Language" />
            </div>
            <div class="col-md-2">
                <input name="Level" value="@Model.Level" class="form-control" placeholder="Level" />
            </div>
            <div class="col-md-1">
                <input type="number" name="MinPrice" value="@Model.MinPrice" class="form-control" placeholder="Min price" />
            </div>
            <div class="col-md-1">
                <input type="number" name="MaxPrice" value="@Model.MaxPrice" class="form-control" placeholder="Max price" />
            </div>
            <div class="col-md-1">
                <input type="number" name="MinStudents" value="@Model.MinStudents" class="form-control" placeholder="Min students" />
            </div>
            <div class="col-md-1">
                <input type="number" name="MaxStudents" value="@Model.MaxStudents" class="form-control" placeholder="Max students" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-primary w-100">🔍</button>
            </div>
        </div>
    </form>
</div>

@if (Model.Courses.Any())
{
    <div class="row">
        @foreach (var course in Model.Courses)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm course-card"
                        style="cursor:pointer"
                        data-bs-toggle="modal"
                        data-bs-target="#viewCourseStudent-@course.Id">

                    <img src="@course.ImageUrl" class="card-img-top"
                            alt="@course.Title"
                            style="height:200px; object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text text-muted" style="max-height: 70px; overflow:hidden;">
                            @course.Description
                        </p>

                        <ul class="list-group list-group-flush mb-2">
                            <li class="list-group-item">📖 @course.Language</li>
                            <li class="list-group-item">🎯 @course.Level</li>
                            <li class="list-group-item">👥 Max: @course.MaxStudents</li>
                            <li class="list-group-item">💳 @course.Price.ToString("F2") ₴</li>
                            <li class="list-group-item">🖥 @course.Format</li>
                        </ul>

                        @if (course.Status == CourseStatus.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (course.Status == CourseStatus.Enrollment)
                        {
                            <span class="badge bg-primary">Enrollment</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@course.Status</span>
                        }
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("_ViewCourseStudent", course)
        }
    </div>
}
else
{
        <p class="text-muted text-center">❌ No courses found.</p>
}
